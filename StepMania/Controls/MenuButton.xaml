<UserControl x:Class="StepMania.Controls.MenuButton"
             x:Name="self"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="180">
    <Grid>
        <Border x:Name="border" CornerRadius="5" BorderBrush="#FF080808" BorderThickness="1">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{Binding ButtonBackground, ElementName=self}" />
                </Style>
            </Border.Style>
            
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="50" ShadowDepth="7" Direction="270"  />
            </Border.Effect>

            <TextBlock x:Name="TextBlock" Text="{Binding Text, ElementName=self}" FontFamily="Calibri" Foreground="White" FontSize="{Binding FontSize, ElementName=self}" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="1" Opacity="0.6" />
                </TextBlock.Effect>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
